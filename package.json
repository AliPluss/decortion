{
  "name": "universal-decorators-complete",
  "version": "1.0.1",
  "description": "ðŸš€ Complete 17 Universal JavaScript Decorators - Works everywhere: React, Vue, Angular, Node.js, Browser, TypeScript, Web Workers",
  "main": "index.js",
  "module": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "dist/",
    "src/",
    "examples/",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.js",
      "types": "./index.d.ts"
    }
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:babel": "babel-node decorators.test.js",
    "dev": "nodemon index.js",
    "build": "npm run build:babel && npm run build:types",
    "build:babel": "babel index.js --out-file dist/index.js",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir .",
    "lint": "eslint *.js --fix",
    "format": "prettier --write *.js",
    "validate": "npm run lint && npm run test",
    "start": "node index.js",
    "example": "node example.js"
  },
  "keywords": [
    "decorators",
    "cache",
    "lru",
    "memoization",
    "protect",
    "logging",
    "retry",
    "debounce",
    "throttle",
    "immutable",
    "inheritance",
    "optimization",
    "performance",
    "validation",
    "rate-limit",
    "metrics",
    "super-matrix",
    "react",
    "vue",
    "angular",
    "nodejs",
    "browser",
    "typescript",
    "javascript",
    "universal"
  ],
  "author": {
    "name": "ali",
    "email": "project.django.rest@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.24.0",
    "@babel/core": "^7.24.0",
    "@babel/node": "^7.24.0",
    "@babel/plugin-proposal-decorators": "^7.24.0",
    "@babel/plugin-transform-class-properties": "^7.24.0",
    "@babel/plugin-transform-private-methods": "^7.24.0",
    "@babel/plugin-transform-private-property-in-object": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "nodemon": "^3.1.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "decoratorsBeforeExport": true
        }
      ],
      [
        "@babel/plugin-transform-class-properties",
        {
          "loose": true
        }
      ],
      [
        "@babel/plugin-transform-private-methods",
        {
          "loose": true
        }
      ],
      [
        "@babel/plugin-transform-private-property-in-object",
        {
          "loose": true
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "**/*.test.js",
      "**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!*.test.js",
      "!*.spec.js",
      "!example.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "verbose": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AliPluss/universal-decorators-complete.git"
  },
  "bugs": {
    "url": "https://github.com/AliPluss/universal-decorators-complete/issues"
  },
  "homepage": "https://github.com/AliPluss/universal-decorators-complete#readme"
}
